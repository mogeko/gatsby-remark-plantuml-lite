{
  "name": "gatsby-remark-plantuml-lite",
  "version": "0.1.2",
  "description": "A Gatsby plugin to transform PlantUML code blocks into SVG images.",
  "main": "dist/index.js",
  "types": "dist/*.d.ts",
  "homepage": "https://github.com/Mogeko/gatsby-remark-plantuml-lite",
  "repository": "git@github.com:Mogeko/gatsby-remark-plantuml-lite.git",
  "bugs": {
    "url": "https://github.com/Mogeko/gatsby-remark-plantuml-lite/issues",
    "email": "zhengjunyi@live.com"
  },
  "author": "Mogeko <zhengjunyi@live.com>",
  "license": "MIT",
  "keywords": [
    "gatsby",
    "gatsby-plugin",
    "remark",
    "plantuml"
  ],
  "files": [
    "dist/*",
    "gatsby-node.js"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist coverage",
    "release": "yarn build && yarn npm publish",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "test": "jest ./tests",
    "cov": "jest --coverage"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@babel/runtime": "^7.18.0",
    "@types/jest": "^26.0.24",
    "@types/mdast": "^3.0.10",
    "@types/node": "^14.18.18",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "gatsby-plugin-utils": "^2.5.0",
    "jest": "^27.5.1",
    "mdast-util-from-markdown": "0.8.5",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.5",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "plantuml-encoder": "^1.4.0",
    "unist-util-flatmap": "^1.0.0"
  },
  "packageManager": "yarn@3.1.0",
  "engines": {
    "node": ">=14.15.0",
    "npm": ">=6.14.8"
  }
}
