{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": { "@/*": ["src/*"] },
    "baseUrl": ".",
    "allowJs": true,
    "verbatimModuleSyntax": true,
    "noEmit": true
  },
  "include": ["src", "tests", "*.config.ts"],
  "exclude": ["node_modules"]
}
